<html>
<head>
    <title>Dillon's Sexy Hair</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="/../styles.css">
</head>
    <body>
        <div class="container">

            <img src="/../purple.png" style="position:fixed; top:0px; left:0px; width:100%; height:100%; z-index:-1">

            <div class="col-sm-2"></div>
            <div class="col-sm-8">

                <h1><center>Dillon's Sexy Hair Salon!</center></h1>
                <h3><center>a word of wild hair arousal...</center></h3>
                <hr>

                <h2><center>{{ stylist.getName }}'s Info:</center></h2>

                <h4>List of all clients:</h4>
                <ul>
                    {% if clients is not empty %}
                        {% for client in clients %}
                            <p><strong>{{ client.getDescription }}</strong></p>
                            <p>appointment: {{ client.getAppointment }}</p>
                            <p>
                                <form action="/client/{{ client.getId }}/edit" method="get">
                                    <button type="submit" class="btn-xs btn-warning">edit</button>
                                </form>
                                <form action="/client_deleted/{{ client.getId }}" method="post">
                                    <input name="_method" type="hidden" value="delete">
                                    <button type="submit" class="btn-xs btn-warning">delete</button>
                                </form>
                            </p>
                        {% endfor %}
                    {% endif %}

                    {% if clients is empty %}
                            <p>No current clients.</p>
                    {% endif %}
                </ul>

                <hr class="small">
                <h4>Add a new client:</h4>

                <ul>
                    <form action="/clients" method="post">
                        <input id="stylist_id" name="stylist_id" type="hidden" value="{{ stylist.getId() }}">
                        <label for="description">Client's Name - </label>
                        <input id="description" name="description" type="text"
                            placeholder="Sally Longhair">
                        <br>
                        <label for="appointment">Appointment Date - </label>
                        <input id="appointment" name="appointment" type="date">
                        <br>

                        <button type="submit" class="btn-xs btn-warning">Add This Client</button>
                    </form>
                </ul>

                <hr class="small">
                <h4>Edit {{ stylist.getName }}'s details:</h4>

                <ul>
                    <form action="/stylists/{{ stylist.getId }}/edit" method="get">
                        <button type="submit" class="btn-xs btn-warning">Edit name</button>
                    </form>

                    <form action="/stylist_deleted/{{ stylist.getId }}" method="post">
                        <input name="_method" type="hidden" value="delete">
                        <button type="submit" class="btn-xs btn-warning">Delete stylist</button>
                    </form>
                </ul>

                <br>
                <hr>

                <center>
                    <form action="/" method="get">
                        <button type="submit" class="btn-danger">Return Home!</button>
                    </form>
                    <form action="/deleted_clients" method="post">
                        <button type="submit" class="btn-danger">Delete All Clients!</button>
                    </form>
                    <form action="/deleted_stylists" method="post">
                        <button type="submit" class="btn-danger">Delete All Stylists!</button>
                    </form>
                </center>

            </div>
            <div class="col-sm-2"></div>

        </div>
    </body>
</html>
